{
    "name": "client-app",
    "version": "1.0.0",
    "description": "Client Application for Ory Hydra",
    "main": "dist/app.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "dev": "nodemon --watch 'src/**/*.ts' ts-node-dev --respawn --transpile-only src/app.ts",
        "start": "node dist/app.js",
        "migrate": "ts-node src/run-migrations.ts",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:run": "typeorm-ts-node-commonjs migration:run -d src/data-source.ts",
        "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/data-source.ts -n",
        "migration:create": "typeorm-ts-node-commonjs migration:create src/migrations/",
        "seed": "ts-node src/seeds/run-seeds.ts",
        "reset": "npm run migration:run && npm run seed",
        "test:watch": "jest --watchAll",
        "test": "jest"
    },
    "dependencies": {
        "@types/morgan": "^1.9.9",
        "axios": "^1.8.3",
        "cors": "^2.8.5",
        "ejs": "^3.1.10",
        "express": "^4.21.2",
        "express-session": "^1.18.1",
        "helmet": "^8.0.0",
        "i": "^0.3.7",
        "morgan": "^1.10.0",
        "npm": "^11.2.0",
        "openid-client": "^6.3.4",
        "redis": "^4.7.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^5.0.0",
        "@types/express-session": "^1.18.1",
        "@types/jest": "^29.5.14",
        "@types/node": "^18.19.80",
        "dotenv": "^16.4.7",
        "jest": "^29.7.0",
        "nodemon": "^3.1.9",
        "ts-jest": "^29.2.6",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.2"
    }
}
