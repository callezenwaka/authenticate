<%- include('partials/header') %>

<main class="container">
  <div class="content">
    <div class="page-header">
      <h1>Dashboard</h1>
      <p>Protected page that requires authentication</p>
    </div>

    <div class="section">
      <h2>Protected API Data</h2>
      <div class="card">
        <% if (error) { %>
          <div class="alert alert-error">
            <p><strong>Error:</strong> <%= error %></p>
          </div>
        <% } else if (blogs) { %>
          <pre><%= JSON.stringify(blogs, null, 2) %></pre>
        <% } else { %>
          <p>No protected data available.</p>
        <% } %>
      </div>
    </div>

    <div class="section">
      <h2>Authentication Status</h2>
      <div class="card">
        <p><strong>Logged in as:</strong> <%= userProfile.data.username || userProfile.data.email || user.sub %></p>
        <p><strong>Subject:</strong> <%= user.sub %></p>
        <% if (userProfile.data.email) { %>
          <p><strong>Email:</strong> <%= userProfile.data.email %></p>
        <% } %>
      </div>
    </div>

    <div class="actions">
      <a href="/profile" class="btn btn-primary">View Profile</a>
      <a href="/" class="btn btn-secondary">Back to Home</a>
    </div>
  </div>
</main>
<%- include('partials/footer') %>